@model IEnumerable<TeachersModel>;


@{
    ViewData["Title"] = "List Of Teachers";
}
>
<h1 class="display-2">List Of Teachers</h1> 
<a asp-controller="Teacher" asp-action="TeacherAdd"
class="btn btn-primary mb-3">
Agregar Maestro
</a>
</div>

<table class="table">
><thead>
     <tr>
        <th> Acciones</th>
        <th> Nombre</th>
        <th> No. Maestro</th>
        <th> Licenciatura</th>
        <th>  Edad </th>
        <th>  Sexo </th>
     </tr>
</thead>
<tbody>
   @foreach(var teacher in Model)
   {
      <tr>
        <td>
          <a class="btn btn-primary" asp-asp-controller="Teacher"
           asp-action="TeacherShowAndEdit"> Editar</a>

           <a class="btn btn-danger" asp-asp-controller="Teacher"
           asp-action="TeacherShowToDelete"> Borrar</a>
        </td>
        <td>
        @teacher.name
        </td>
        <td>
        @teacher.tuition
        </td>
        <td>
         @teacher.profession
        </td>
        <td>
         @teacher.age
        </td>
        <td>
         @teacher.sex
        </td>
      </tr>
   }

</tbody>
<tfoot>

</tfoot>
</table>