@{
    ViewData["Title"] = "Editar Alumno";
}

<div class="text-center">
    <h1 class="display-2"> Editar Datos de Alumno</h1>
</div>



<form asp-controller="Student" asp-action="StudentEdit">
<div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba nombre de alumno" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
      <a asp-controller="Student" asp-action="StudentList"
       class="btn btn-secundary mb-3"> Regresar</a>

</form>